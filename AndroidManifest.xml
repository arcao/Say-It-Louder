            </intent-filter>
        </activity>
        <activity android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" android:configChanges="keyboardHidden|orientation" android:name="DisplayActivity" />
        <activity android:label="@string/preferences" android:name="PreferenceActivity"></activity>
    </application>
</manifest>